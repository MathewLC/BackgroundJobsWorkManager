<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/start_work"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/first_button_top_margin"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_work_button"
        />

    <Button
        android:id="@+id/work_status"
        app:layout_constraintTop_toBottomOf="@id/start_work"
        android:layout_marginTop="@dimen/button_horizontal_margin"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/work_status_button"
        />

    <Button
        android:id="@+id/reset_status"
        app:layout_constraintTop_toBottomOf="@id/work_status"
        android:layout_marginTop="@dimen/button_horizontal_margin"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset_status_button"
        />

    <Button
        android:id="@+id/work_on_ui_thread"
        app:layout_constraintTop_toBottomOf="@id/reset_status"
        android:layout_marginTop="@dimen/button_horizontal_margin"
        android:layout_marginHorizontal="@dimen/button_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/work_ui_thread_button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>